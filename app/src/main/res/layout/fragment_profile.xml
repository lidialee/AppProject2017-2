<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lidia.appproject2017_2.Fragment.ProfileFragment">



    <RelativeLayout
        android:id="@+id/relative_mypage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff8f1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_mypage"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_info_image"
            android:src="@drawable/profiledefault"
            app:civ_border_color="@color/orange"
            android:layout_marginTop="30dp"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name_text_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riome"
            android:textAlignment="center"
            android:textColor="#3e3e3e"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profile_image_mypage"/>

        <TextView
            android:id="@+id/email_text_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OOOO@gmail.com"
            android:textAlignment="center"
            android:textColor="#3e3e3e"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/name_text_mypage"/>

        <TextView
            android:id="@+id/userType_text_mypage"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="가게주"
            android:textAlignment="center"
            android:textColor="#3e3e3e"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/email_text_mypage" />

        <ImageView
            android:id="@+id/register_store"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@+id/userType_text_mypage"
            android:layout_centerHorizontal="true"
            android:src="@drawable/register" />

        <ImageView
            android:id="@+id/edit_info_image"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/setting"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>



    </RelativeLayout>


</RelativeLayout>
