<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lidia.appproject2017_2.Activity.FindAreaActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/main"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="지역 선택"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/area_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backarrow"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/area_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/appbarlayout_area">

        <TextView
            android:id="@+id/area_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✽ 지역을 선택해주세요"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:paddingStart="20dp"
            android:paddingTop="25dp"
            android:paddingBottom="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp">
                <ImageView
                    android:id="@+id/seoul"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@drawable/seoul"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:id="@+id/busan"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@drawable/busan"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@+id/seoul"/>

                <ImageView
                    android:id="@+id/degu"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@drawable/degu"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@+id/busan"/>

                <ImageView
                    android:id="@+id/inchen"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@drawable/inchen"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/dejen"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/dejen"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/gwangju"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/gwangju"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/dejen"/>

            <ImageView
                android:id="@+id/wolsan"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/wolsan"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/gwangju"/>

            <ImageView
                android:id="@+id/sejong"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/sejong"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/geongii"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/geongii"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/gangwondo"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/gangwondo"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/geongii"/>

            <ImageView
                android:id="@+id/chungnorth"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/chungnorth"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/gangwondo"/>

            <ImageView
                android:id="@+id/chungsouth"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/chungsouth"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/junranorth"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/junranorth"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/junrasouth"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/junrasouth"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/junranorth"/>

            <ImageView
                android:id="@+id/geongnorth"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/geongnorth"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/junrasouth"/>

            <ImageView
                android:id="@+id/geongsouth"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/geongsouth"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/jeju"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/jeju"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
