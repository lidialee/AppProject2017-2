<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="175dp">

    <TextView
        android:id="@+id/find_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/tabcolor"
        android:paddingBottom="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:text="반려동물과 함께하고 싶은 가게를 선택해주세요"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/find_dialog_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="17dp">

            <ImageView
                android:id="@+id/find_dialog_pension"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/dialog_pension_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팬션"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:layout_alignEnd="@+id/find_dialog_pension"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/find_dialog_pension"/>

            <ImageView
                android:id="@+id/find_dialog_cafe"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/find_dialog_pension" />

            <TextView
                android:id="@+id/dialog_cafe_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카페"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/find_dialog_cafe"
                android:layout_alignStart="@+id/find_dialog_cafe"
                android:layout_alignEnd="@+id/find_dialog_cafe" />

            <ImageView
                android:id="@+id/find_dialog_rest"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/find_dialog_cafe"
                 />


            <TextView
                android:id="@+id/dialog_rest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음식점"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/find_dialog_rest"
                android:layout_alignStart="@+id/find_dialog_rest"
                android:layout_alignEnd="@+id/find_dialog_rest" />


            <ImageView
                android:id="@+id/find_dialog_etc"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                 />


            <TextView
                android:id="@+id/dialog_etc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타 상점"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/find_dialog_etc"
                android:layout_alignStart="@+id/find_dialog_etc"
                android:layout_alignEnd="@+id/find_dialog_etc"/>

        </RelativeLayout>
    </RelativeLayout>





</RelativeLayout>