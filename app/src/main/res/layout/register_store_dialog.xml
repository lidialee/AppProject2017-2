<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="175dp">

    <RelativeLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tabcolor"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="운영하시는 가게 타입을 선택해주세요"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dialog_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="17dp">

            <ImageView
                android:id="@+id/register_dialog_pension"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/dialog_pension_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/register_dialog_pension"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/register_dialog_pension"
                android:layout_marginTop="7dp"
                android:text="숙박"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/register_dialog_cafe"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/register_dialog_pension" />

            <TextView
                android:id="@+id/dialog_cafe_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/register_dialog_cafe"
                android:layout_alignStart="@+id/register_dialog_cafe"
                android:layout_below="@+id/register_dialog_cafe"
                android:layout_marginTop="7dp"
                android:text="카페"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/register_dialog_rest"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/register_dialog_cafe" />


            <TextView
                android:id="@+id/dialog_rest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/register_dialog_rest"
                android:layout_alignStart="@+id/register_dialog_rest"
                android:layout_below="@+id/register_dialog_rest"
                android:layout_marginTop="7dp"
                android:text="음식점"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/register_dialog_etc"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/dialog_etc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/register_dialog_etc"
                android:layout_alignStart="@+id/register_dialog_etc"
                android:layout_below="@+id/register_dialog_etc"
                android:layout_marginTop="7dp"
                android:text="기타 상점"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>